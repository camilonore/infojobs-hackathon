---
import Layout from '@layouts/Layout.astro'
import HeroBanner from '@components/index/HeroBanner.astro'
import RelevantJobs from '@components/index/RelevantJobs.astro'
import MasonryCategories from '@components/index/MasonryCategories.astro'
export const prerender = true
---

<Layout title='Infojobs Hackathon'>
  <main>
    <HeroBanner />
    <RelevantJobs />
  </main>
  <section>
    <MasonryCategories />
  </section>
</Layout>

<style>
  main {
    max-width: 90%;
    margin: 20px auto;
    min-height: 100vh;
  }
  section {
    height: 100vh;
    background-color: var(--primary-color);
    overflow: hidden;
  }
</style>
